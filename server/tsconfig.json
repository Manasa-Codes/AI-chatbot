{
  "compilerOptions": {
    "target": "ES2020",             /* modern JS output */
    "module": "CommonJS",           /* for Node.js */
    "outDir": "dist",               /* compiled JS goes here */
    "rootDir": ".",                 /* compile all TS files in current folder */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "client"]
}
